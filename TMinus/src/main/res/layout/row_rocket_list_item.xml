<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="@dimen/rocket_list_padding">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="Rocket Name"
        android:id="@+id/ROCKETLISTITEM_rocket_name"
        android:layout_gravity="left|center_vertical"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/flag_unknown"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        tools:text="@string/ROCKETLIST_item_configuration"
        android:id="@+id/ROCKETLISTITEM_rocket_configuration"
        android:layout_gravity="left|center_vertical"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        tools:text="@string/ROCKETLIST_item_agencies"
        android:id="@+id/ROCKETLISTITEM_rocket_agencies"
        android:layout_gravity="left|center_vertical"/>
</LinearLayout>