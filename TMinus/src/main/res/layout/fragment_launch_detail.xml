<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

        <LinearLayout
                android:id="@+id/LAUNCHDETAIL_imminent_launch_container"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/launch_detail_padding"
                android:background="@color/count_down_alert_background"
                android:padding="@dimen/launch_detail_padding">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/LAUNCHDETAIL_imminent_launch"
                    android:textStyle="bold|italic"
                    android:textColor="@color/count_down_alert_text"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"/>

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/LAUNCHDETAIL_count_down_button"
                    android:id="@+id/button"
                    android:onClick="countDownClicked"
                    android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/content_view"
                android:layout_below="@id/LAUNCHDETAIL_imminent_launch_container">

            <com.android.volley.toolbox.NetworkImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scaleType="centerCrop"
                    android:id="@+id/LAUNCHDETAIL_mission_image"
                    android:contentDescription="@string/LAUNCHDETAIL_launch_image_description"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/textAppearanceLargeAccent"
                    android:text="Mission Name"
                    android:id="@+id/LAUNCHDETAIL_mission_name"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText"
                    android:layout_marginTop="@dimen/launch_detail_padding"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Mission description"
                    android:id="@+id/LAUNCHDETAIL_mission_description"
                    android:textColor="@color/secondary_text"
                    tools:ignore="HardcodedText"/>

            <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/launch_detail_padding"
                    android:id="@+id/tableLayout">

                <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/launch_detail_padding"
                        android:id="@+id/tableRow">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/LAUNCHDETAIL_status"
                            android:textStyle="bold"
                            android:gravity="right"
                            android:layout_marginRight="@dimen/launch_detail_padding"/>

                    <TextView
                            tools:ignore="HardcodedText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="GO"
                            android:id="@+id/LAUNCHDETAIL_status"
                            android:textColor="@color/secondary_text"
                            android:layout_weight="1"/>
                </TableRow>

                <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/launch_detail_padding">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/LAUNCHDETAIL_launch_window"
                            android:textStyle="bold"
                            android:gravity="right"
                            android:layout_marginRight="@dimen/launch_detail_padding"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="MMM dd, yyyy HH:mm:ss zzz"
                            android:id="@+id/LAUNCHDETAIL_launch_window"
                            android:textColor="@color/secondary_text"
                            tools:ignore="HardcodedText"
                            android:layout_weight="1"/>
                </TableRow>

                <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/launch_detail_padding"
                        >

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/LAUNCHDETAIL_launch_window_length"
                            android:textStyle="bold"
                            android:gravity="right"
                            android:layout_marginRight="@dimen/launch_detail_padding"/>

                    <TextView
                            tools:ignore="HardcodedText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="10h 5m"
                            android:id="@+id/LAUNCHDETAIL_window_length"
                            android:textColor="@color/secondary_text"
                            android:layout_weight="1"
                            android:singleLine="false"/>
                </TableRow>

                <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="@dimen/launch_detail_padding">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/LAUNCHDETAIL_location"
                            android:textStyle="bold"
                            android:gravity="right"
                            android:layout_marginRight="@dimen/launch_detail_padding"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Your Moms House"
                            android:id="@+id/LAUNCHDETAIL_location"
                            android:textColor="@color/secondary_text"
                            tools:ignore="HardcodedText"
                            android:layout_weight="1"/>
                </TableRow>

                <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="@dimen/launch_detail_padding">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/LAUNCHDETAIL_count_down"
                            android:textStyle="bold"
                            android:gravity="right"
                            android:layout_marginRight="@dimen/launch_detail_padding"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="5d 12h 24m"
                            android:id="@+id/LAUNCHDETAIL_time_remaining"
                            android:textColor="@color/secondary_text"
                            android:layout_weight="1"
                            tools:ignore="HardcodedText"
                            />
                </TableRow>

                <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="@dimen/launch_detail_padding"
                        android:paddingBottom="@dimen/launch_detail_padding">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_span="2"
                            android:textAppearance="@style/textAppearanceMediumAccent"
                            android:text="@string/LAUNCHDETAIL_launch_vehicle"
                            android:textStyle="bold"
                            android:layout_marginRight="@dimen/launch_detail_padding"/>
                </TableRow>

                <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="@dimen/launch_detail_padding">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Rocket Name"
                            android:id="@+id/LAUNCHDETAIL_rocket_name"
                            android:textColor="@color/secondary_text"/>

                    <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/LAUNCHDETAIL_rocket_detail_button"
                            android:id="@+id/LAUNCHDETAIL_rocket_detail_button"
                            android:onClick="rocketDetailsClicked"/>
                </TableRow>

                <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="@dimen/launch_detail_padding"
                        android:paddingBottom="@dimen/launch_detail_padding">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_span="2"
                            android:textAppearance="@style/textAppearanceMediumAccent"
                            android:text="@string/LAUNCHDETAIL_launch_location"
                            android:textStyle="bold"
                            android:layout_marginRight="@dimen/launch_detail_padding"/>
                </TableRow>

                <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="@dimen/launch_detail_padding">

                    <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="256dp"
                            android:layout_span="2"
                            android:id="@+id/LAUNCHDETAIL_location_container">

                        <!-- TODO: This is an awful awful hack for which I will surly be punished: http://stackoverflow.com/a/17705806/1366 -->
                        <SurfaceView
                                android:layout_width="0dp"
                                android:layout_height="0dp"/>
                    </FrameLayout>
                </TableRow>

            </TableLayout>

        </LinearLayout>

        <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar"
                android:indeterminate="true"
                android:layout_centerInParent="true"/>

    </RelativeLayout>
</ScrollView>