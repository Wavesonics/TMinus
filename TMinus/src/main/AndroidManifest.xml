<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.darkrockstudios.apps.tminus"
          android:versionCode="16"
          android:versionName="0.13.1">

<uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18"/>

    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES"/>

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true"/>

    <application
        android:name="com.darkrockstudios.apps.tminus.TMinusApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.darkrockstudios.apps.tminus.LaunchListActivity"
            android:label="">
        <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.darkrockstudios.apps.tminus.RocketBrowserActivity"
            android:label="@string/title_activity_rocket_list">
        </activity>
        <activity
            android:name="com.darkrockstudios.apps.tminus.LocationBrowserActivity"
            android:label="@string/title_activity_launch_locations">
        </activity>
        <activity
            android:name="com.darkrockstudios.apps.tminus.LaunchDetailActivity"
            android:label="@string/title_launch_detail"
            android:parentActivityName=".LaunchListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LaunchListActivity"/>
        </activity>
        <activity
            android:name="com.darkrockstudios.apps.tminus.CountDownActivity"
            android:label="@string/title_activity_count_down"
            android:theme="@style/CountDownTheme">
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@android:style/Theme.Holo"/>
        <activity
            android:name=".RocketDetailActivity"
            android:label="@string/title_activity_rocket_detail"
            android:parentActivityName=".RocketBrowserActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".RocketBrowserActivity"/>
        </activity>
        <activity
            android:name=".LocationDetailActivity"
            android:label="@string/title_activity_location_detail"
            android:parentActivityName=".LocationBrowserActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LocationBrowserActivity"/>
        </activity>

        <receiver android:name=".AlarmUpdateReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED"/>
            </intent-filter>
        </receiver>

        <service android:name=".UpdateAlarmsService"/>
        <service android:name=".NotificationService"/>
        <service android:name=".LaunchUpdateService"/>
        <service android:name=".RocketDetailUpdateService"/>
        <service android:name=".updatetasks.DataUpdaterService"/>

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_api_key"/>
    </application>

</manifest>
